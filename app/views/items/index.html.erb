    <div class="row" id="main-content-index">
      <!-- Single Product Area -->
      <!-- récuperation des données, ligne par ligne pour l'affichage -->
      <% Item.all.each do |item| %>
      <div class="col-12 col-sm-6 col-md-12 col-xl-6">
        <div class="single-product-wrapper">
          <% @itemvar = item.id %>
          <% item.itempicture.each do |itempicture| %>
            <div class="product-img">
              <%= image_tag item.itempicture.first, alt: 'chaton' %>
            </div>
            <% break %>
          <% end %>
            <!-- Product Description -->
          <div class="product-description d-flex align-items-center justify-content-between">
              <!-- Product Meta Data -->
            <div class="product-meta-data">
              <div class="line"></div>
              <p class="product-price"><%= item.price %> €</p>
              <h6><%= link_to item.title, item_path(item.id) %></h6>
            </div>

              <!-- Ratings & Cart -->
            <div class="ratings-cart text-right">

              <div class="cart">
                <a href="cart.html" data-toggle="tooltip" data-placement="left" title="Add to Cart"><img src="img/core-img/cart.png" alt=""></a>
              </div>


            </div>
          </div>
        </div>
      </div>
      <% end %>
      <!-- End Single Product Area -->
    </div>
